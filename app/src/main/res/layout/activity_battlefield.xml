<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEA00"
    tools:context=".Battlefield">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBattleLutemonList"
        android:layout_width="277dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <Button
        android:id="@+id/btnFight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taistele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvBattleLutemonList"
        app:layout_constraintVertical_bias="0.895" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnFight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvBattleLutemonList"
        app:layout_constraintVertical_bias="0.66">

        <TextView
            android:id="@+id/txtFightSpecs"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:textSize="16sp"
            android:textStyle="bold" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>